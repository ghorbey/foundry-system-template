{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "isolatedModules": false,
    "module": "esnext",
    "sourceMap": true,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "useDefineForClassFields": false,
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js"]
}
